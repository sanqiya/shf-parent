<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.DictDao">

    <resultMap id="Dict" type="Dict">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="dictCode" column="dict_code"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
      id,parent_id,name,dict_code,create_time,update_time,is_deleted
   </sql>

    <select id="findListByParentId" resultMap="Dict">
        select <include refid="columns" />
        from hse_dict
        where
        parent_id = #{parentId}
    </select>

    <select id="countIsParent" resultType="Integer">
      select count(*)
      from hse_dict
      where
      parent_id = #{id}
   </select>

    <select id="getNameById" resultType="String">
   select name
   from hse_dict
   where
   id = #{id}
</select>

    <select id="getByDictCode" resultMap="Dict">
        select <include refid="columns" />
        from hse_dict
        where
        dict_code = #{dictCode}
    </select>

</mapper>